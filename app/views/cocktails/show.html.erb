<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%=  @cocktail.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          <% @cocktail.doses.each do |dose| %>
            <%= dose.description %>
            <%= dose.ingredient.name %>
          <% end %>
          <span class = "btn btn-info"><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></span>
        </p>
      </div>
      <div class="modal-footer">
        <span class = "btn btn-info"><%= link_to "back to list of cocktails", cocktails_path %></span>
        <span class = "btn btn-dark"><%= link_to "Delete", dose_path,
            method: :delete,
            data: { confirm: "Are you sure?" } %></span>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
